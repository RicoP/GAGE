{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/DGRAPHICS_API_OPENGL_33",
                "/DPLATFORM_DESKTOP",
                "/MP",
                "/Iraylib/src",
                "/Iraylib/src/external",
                "/Iraylib/src/external/glfw/include",
                "/Iraylib/src/external/glfw/deps",
                "/Iimgui/",
                "/Irlimgui/",
                "example.cpp",
                "imgui/*.cpp",
                "rlimgui/*.cpp",
                "raylib/src/*.c",
                "/link user32.lib shell32.lib winmm.lib gdi32.lib",
                "/OUT:example.exe",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Clean",
            "command": "Remove-Item",
            "args": [
                "*.obj,",
                "*.pdb",
                "*.ilk",
            ],
            "options": {
                "cwd": "${fileDirname}\\.."
            },
            "group": {
                "kind": "build",
            }
        },
    ],
    "version": "2.0.0"
}